<?xml version="1.0"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <filter>
        <filter-name>Hibernate Session Filter</filter-name>
        <filter-class>io.machinecode.sphinx.example.web.HibernateSessionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Hibernate Session Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <context-param>
        <param-name>org.picketbox.authentication</param-name>
        <param-value>FORM</param-value>
    </context-param>
    <context-param>
        <param-name>org.picketbox.configuration.provider</param-name>
        <param-value>io.machinecode.sphinx.example.web.security.Configuration</param-value>
    </context-param>
    <filter>
        <filter-name>PicketBox Delegating Filter</filter-name>
        <filter-class>org.picketbox.http.filters.DelegatingSecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PicketBox Delegating Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
